<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:background="@color/text_white"
        android:id="@id/layout_golden_ranking"
        style="@style/layout_fill_wrap"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@id/square_vote_creative_image"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dip"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:visibility="gone"
             />

        <TextView
            android:id="@id/square_vote_creative_title"
            style="@style/layout_wrap_wrap"
            android:layout_alignTop="@id/square_vote_creative_image"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/square_vote_creative_image"
            android:layout_marginTop="4dip"
            android:ellipsize="end"
            android:gravity="left"
             android:padding="10dip"
            android:lines="1"
            android:text="新包装《新包装低碳》"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/square_vote_creative_time"
            style="@style/layout_fill_wrap"
            android:layout_below="@id/square_vote_creative_title"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@id/square_vote_creative_image"
            android:text="发布于2013-10-24 12:20"
            android:textColor="@color/text_grey"
             android:paddingBottom="10dip"
             android:paddingLeft="10dip"
            android:textSize="10sp" />

        <ImageView
            android:id="@id/square_vote_image"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:padding="10dip"
            android:focusable="false"
            android:layout_marginRight="30dip"
            android:src="@drawable/vote" />
	
</RelativeLayout>