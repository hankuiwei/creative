<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:background="@color/text_white"
        android:id="@id/layout_golden_ranking"
        style="@style/layout_fill_wrap"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@id/square_other_image"
            android:layout_height="42dip"
            android:layout_width="42dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:visibility="gone"
             />

        <TextView
            android:id="@id/square_other_title"
            style="@style/layout_wrap_wrap"
            android:layout_alignTop="@id/square_other_image"
            android:layout_marginLeft="14dip"
            android:layout_toRightOf="@id/square_other_image"
            android:layout_toLeftOf="@id/square_other_detail_check"
            android:layout_marginTop="4dip"
            android:paddingTop="4dip"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="新包装《新包装低碳》"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@id/square_other_time"
            style="@style/layout_fill_wrap"
            android:layout_below="@id/square_other_title"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="2dip"
            android:padding="4dip"
            android:layout_toRightOf="@id/square_other_image"
            android:text="发布于2013-10-24 12:20"
            android:textColor="@color/text_grey"
            android:textSize="10sp" />

        <ImageView
            android:id="@id/square_other_detail_check"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip"
            android:src="@drawable/square_check" />
	
</RelativeLayout>