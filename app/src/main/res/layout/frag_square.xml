<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar_square" >

        <ImageView
            android:id="@id/back"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back"
            android:paddingRight="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="创意广场"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/square_search_bar"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/search_bg" >

        <EditText
            android:id="@id/square_search_edit"
            style="@style/layout_fill_wrap"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:padding="4dip" />

        <ImageView
            android:id="@id/square_search_button"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/search_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layout_square_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="20dip"
        android:layout_weight="4"
        android:background="@drawable/bg_square_cross"
        android:gravity="center" >

        <ImageView
            android:id="@id/square_product_button"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dip"
            android:src="@drawable/square_product_icon" />

        <ImageView
            android:id="@id/square_pack_button"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:src="@drawable/square_pack_icon" />

        <ImageView
            android:id="@id/square_market_button"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/square_market_icon" />

        <ImageView
            android:id="@id/square_other_button"
            style="@style/layout_wrap_wrap"
            android:layout_centerInParent="true"
            android:src="@drawable/square_other_icon" />

        <ImageView
            android:id="@id/square_technology_button"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/square_tech_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@id/square_vote_button"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="0.5"
        android:src="@drawable/square_vote_button" />

    <RelativeLayout
        android:id="@id/layout_ranking_title"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"
        android:background="@drawable/square_more_bg"
         >

        <TextView
            android:id="@id/square_ranking_title"
            style="@style/layout_fill_wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dip"
            android:gravity="center_horizontal"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:text="中联创意"
            android:textStyle="bold" />

        <TextView
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawableRight="@drawable/square_arrow"
            android:shadowRadius="2"
            android:text="@string/more"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_ranking"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_golden_ranking01"
            style="@style/layout_fill_wrap"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/first" />

            <ImageView
                android:id="@id/square_golden_cup"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/golden_cup" />

            <TextView
                android:id="@id/square_golden_title"
                style="@style/layout_wrap_wrap"
                android:layout_alignTop="@id/square_golden_cup"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@id/square_golden_cup"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_golden_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_golden_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/square_golden_cup"
                android:text=""
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_golden_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.8"
            android:background="@color/green" />

        <RelativeLayout
            android:id="@+id/layout_silver_ranking01"
            style="@style/layout_fill_wrap"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/second" />

            <ImageView
                android:id="@id/square_silver_cup"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/silver_cup" />

            <TextView
                android:id="@id/square_silver_title"
                style="@style/layout_wrap_wrap"
                android:layout_alignTop="@id/square_silver_cup"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@id/square_silver_cup"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_silver_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_silver_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toLeftOf="@id/square_silver_detail_check"
                android:layout_toRightOf="@id/square_silver_cup"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_silver_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:alpha="0.8"
            android:background="@color/green" />

        <RelativeLayout
            android:id="@+id/layout_bronze_ranking01"
            style="@style/layout_fill_wrap"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/third" />

            <ImageView
                android:id="@id/square_bronze_icon"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/bronze_cup" />

            <TextView
                android:id="@id/square_bronze_title"
                style="@style/layout_wrap_wrap"
                android:layout_alignTop="@id/square_bronze_icon"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@id/square_bronze_icon"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_bronze_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_bronze_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/square_bronze_icon"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_broze_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>
    </LinearLayout>
    <!--
    <LinearLayout
        android:id="@id/layout_no_ranking"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:visibility="gone" >
		
        <TextView
            style="@style/fill_fill"
            android:gravity="center"
            android:text="@string/square_no_ranking_text" />
    </LinearLayout>
    -->

</LinearLayout>