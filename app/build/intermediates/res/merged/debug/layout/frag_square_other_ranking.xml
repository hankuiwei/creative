<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/top_bar_square" >

        <ImageView
            android:id="@id/back"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back"
            android:paddingRight="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/square_ranking_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.5"
        android:alpha="0.7"
        android:background="@color/text_white"
        android:gravity="center" >

        <Button
            android:id="@id/square_date_text"
            style="@style/layout_wrap_wrap"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/creative_ranking_qi_selector"
            android:text="本    期"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/creative_ranking_time_bg"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:id="@id/layout_ranking"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/layout_golden_ranking"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:alpha="0.6"
            android:background="@color/text_white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/first" />

            <ImageView
                android:id="@id/square_golden_cup"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/golden_cup" />

            <TextView
                android:id="@id/square_golden_title"
                style="@style/layout_fill_wrap"
                android:layout_alignTop="@id/square_golden_cup"
                android:layout_marginLeft="8dip"
                android:layout_toLeftOf="@id/square_golden_detail_check"
                android:layout_toRightOf="@id/square_golden_cup"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_golden_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_golden_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toLeftOf="@id/square_golden_detail_check"
                android:layout_toRightOf="@id/square_golden_cup"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_golden_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip" />

        <RelativeLayout
            android:id="@id/layout_silver_ranking"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:alpha="0.6"
            android:background="@color/text_white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/second" />

            <ImageView
                android:id="@id/square_silver_cup"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/silver_cup" />

            <TextView
                android:id="@id/square_silver_title"
                style="@style/layout_fill_wrap"
                android:layout_alignTop="@id/square_silver_cup"
                android:layout_marginLeft="8dip"
                android:layout_toLeftOf="@id/square_silver_detail_check"
                android:layout_toRightOf="@id/square_silver_cup"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_silver_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_silver_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toLeftOf="@id/square_silver_detail_check"
                android:layout_toRightOf="@id/square_silver_cup"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_silver_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:alpha="0.6"
            android:background="@color/text_white"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@id/square_first_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:src="@drawable/third" />

            <ImageView
                android:id="@id/square_bronze_icon"
                style="@style/layout_wrap_wrap"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:layout_toRightOf="@id/square_first_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/bronze_cup" />

            <TextView
                android:id="@id/square_bronze_title"
                style="@style/layout_fill_wrap"
                android:layout_alignTop="@id/square_bronze_icon"
                android:layout_marginLeft="8dip"
                android:layout_toLeftOf="@id/square_broze_detail_check"
                android:layout_toRightOf="@id/square_bronze_icon"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:text="暂无数据"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/square_bronze_time"
                style="@style/layout_fill_wrap"
                android:layout_below="@id/square_bronze_title"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="4dip"
                android:layout_toLeftOf="@id/square_broze_detail_check"
                android:layout_toRightOf="@id/square_bronze_icon"
                android:textColor="@color/text_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@id/square_broze_detail_check"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:src="@drawable/square_check" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip" />
    </LinearLayout>

    <com.cofco.view.ScrollBackListView
        android:id="@+id/square_end_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:alpha="0.6"
        android:background="@color/text_white"
        android:scrollbars="none"
        android:visibility="gone" >
    </com.cofco.view.ScrollBackListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:alpha="0.7"
        android:background="@color/text_white"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/rbtn_more"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:button="@drawable/creative_ranking_more_selector"
            android:background="@drawable/creative_ranking_more_selector"
             />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_other"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/layout_no_ranking"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6"
            android:alpha="0.7"
            android:background="@color/text_white"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                style="@style/fill_fill"
                android:gravity="center"
                android:text="@string/square_no_ranking_text" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:alpha="0.9"
            android:background="@color/text_white"
            android:gravity="center" >

            <TextView
                style="@style/layout_fill_wrap"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="其他优秀创意"
                android:textColor="@color/green"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="8"
            android:alpha="0.7"
            android:background="@color/text_white"
            >

            <com.cofco.view.ScrollBackListView
                android:id="@id/square_other_list"
                style="@style/layout_fill_wrap"
                android:background="@color/text_white"
                android:scrollbars="none" >
            </com.cofco.view.ScrollBackListView>

            <TextView
                android:id="@id/square_no_other_text"
                style="@style/fill_fill"
                android:gravity="center"
                android:text="@string/square_no_ranking_text"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>