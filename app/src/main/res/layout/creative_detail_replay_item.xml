<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:background="@color/text_white"
        android:id="@id/layout_golden_ranking"
        style="@style/layout_fill_wrap"
        android:alpha="0.7"
        android:gravity="center_vertical" >


        <ImageView
            android:id="@id/creative_detail__replay_user_image"
            android:layout_height="42dip"
            android:layout_width="42dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/user_thumb"
            android:adjustViewBounds="true"
             />

        <TextView
            android:id="@id/creative_detail__replay_user_name"
            style="@style/layout_wrap_wrap"
            android:layout_alignTop="@id/creative_detail__replay_user_image"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/creative_detail__replay_user_image"
            android:layout_marginTop="2dip"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/creative_detail_replay_content"
            style="@style/layout_fill_wrap"
            android:layout_below="@id/creative_detail__replay_user_name"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="2dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="10dip"
            android:layout_toRightOf="@id/creative_detail__replay_user_image"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@id/creative_detail_replay_time"
            style="@style/layout_wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/creative_detail__replay_user_name"
            android:layout_marginRight="10dip"
            android:layout_marginTop="2dip"
            android:text=""
        	 />
	
</RelativeLayout>