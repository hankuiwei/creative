<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layout_golden_ranking"
    style="@style/layout_fill_wrap"
    android:background="@color/text_white"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@id/square_vote_history_creative_image"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:adjustViewBounds="true"
        android:padding="10dip"
        android:visibility="gone" />

    <TextView
        android:id="@id/square_vote_history_creative_title"
        style="@style/layout_wrap_wrap"
        android:layout_alignTop="@id/square_vote_history_creative_image"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="4dip"
        android:layout_toRightOf="@id/square_vote_history_creative_image"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:padding="10dip"
        android:text="新包装《新包装低碳》"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/square_vote_history_creative_time"
        style="@style/layout_fill_wrap"
        android:layout_below="@id/square_vote_history_creative_title"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/square_vote_history_creative_image"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:text="发布于2013-10-24 12:20"
        android:textColor="@color/text_grey"
        android:textSize="10sp" />

    <Button
        android:id="@id/square_vote_history_image"
        style="@style/layout_wrap_wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dip"
        android:background="@drawable/vote_num"
        android:padding="4dip"
        android:textColor="@color/text_white" />

</RelativeLayout>