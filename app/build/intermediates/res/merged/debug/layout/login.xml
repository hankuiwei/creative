<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/login_logo"
        style="@style/layout_fill_wrap"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dip"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:id="@id/layout_login_username"
        style="@style/layout_fill_wrap"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/layout_fill_wrap"
            android:paddingLeft="40dip" >

            <ImageView
                android:id="@id/login_icon"
                style="@style/layout_wrap_wrap"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_user_name" />

            <EditText
                android:id="@id/user_name"
                style="@style/layout_wrap_wrap"
                android:layout_toRightOf="@id/login_icon"
                android:background="@null"
                android:ems="10"
                android:padding="4dip"
                 >

            </EditText>
        </RelativeLayout>

      
    </LinearLayout>
		  <View
            android:id="@id/login_divider"
            android:layout_width="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="2dip"
            android:layout_height="6dip"
            
            android:background="@drawable/login_line" />
    <LinearLayout
        android:id="@id/layout_login_password"
        style="@style/layout_fill_wrap"
        android:layout_marginTop="0dip" >

        <RelativeLayout
            style="@style/layout_fill_wrap"
            android:paddingLeft="40dip" >
            <ImageView
                android:id="@id/login_icon1"
                style="@style/layout_wrap_wrap"
                android:layout_marginTop="4dp"
                android:src="@drawable/login_password" />

            <EditText
                android:id="@id/user_password"
                style="@style/layout_wrap_wrap"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@id/login_icon1"
                android:background="@null"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="4dip" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@id/layout_login_button"
        style="@style/layout_fill_wrap"
        android:layout_marginTop="69dp" >

        <Button
            android:id="@id/confirm_button"
            style="@style/layout_wrap_wrap"
            android:layout_centerInParent="true"
            android:background="@drawable/login_button" />
    </RelativeLayout>

</LinearLayout>