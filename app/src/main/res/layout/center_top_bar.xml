<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/top_bar_square1"
    android:orientation="vertical" >
    <ImageView 
        android:id="@id/back"
        style="@style/layout_wrap_wrap"
          android:adjustViewBounds="true"
          android:layout_marginLeft="10dip"
          android:layout_centerVertical="true"
         android:background="@drawable/back"
        />
   <Button 
        android:id="@id/back_right"
        android:layout_toRightOf="@id/square_title"
        android:layout_alignParentRight="true"
        style="@style/layout_wrap_wrap"
          android:adjustViewBounds="true"
          android:background="@drawable/back"
          android:visibility="invisible"
        />

   <TextView
       android:id="@id/square_title"
       style="@style/layout_wrap_wrap"
       android:layout_alignBottom="@id/back_right"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:paddingTop="8dip"
       android:layout_centerVertical="true"
       android:text="@string/square_title"
       android:textColor="@color/text_white"
       android:textSize="20sp" />

</RelativeLayout>
